class Solution {
    public int[] countOddEven(int[] arr) {
        // Code here
        int evenCount = 0;
	    int oddCount = 0;
	    for(int i =0; i< arr.length; i++){
	        if(arr[i] % 2 == 0){
	          evenCount++;
	        }else{
	            oddCount++;
	        }
	    }
	        return new int[]{oddCount, evenCount};
	}
    
}
